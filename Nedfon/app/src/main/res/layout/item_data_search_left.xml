<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="0dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:id="@+id/dialog_left_teampareture_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="12sp"
            android:textColor="@color/device_gray_shen"
            android:text="23Â°"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/dialog_left_humidity_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="12sp"
            android:textColor="@color/device_gray_shen"
            android:text="80%"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/dialog_left_pm25_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="12sp"
            android:textColor="@color/device_gray_shen"
            android:text="123"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/dialog_left_time_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="12sp"
            android:textColor="@color/device_gray_shen"
            android:text="2018/02/26 16:21"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>
