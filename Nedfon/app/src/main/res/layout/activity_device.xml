<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="1.2"
        android:orientation="vertical"
        android:background="@drawable/title_bar_bg"
        >
        <include layout="@layout/top_layout"></include>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="@drawable/set_long_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/activity_device_shiwai_tv"
                android:layout_width="0dp"
                android:layout_weight="1.4"
                android:layout_height="match_parent"
                android:text="室外"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.8">
                <ImageView
                    android:id="@+id/temperature_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/temperature_icon"
                    />
                <TextView
                    android:id="@+id/temperature_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/temperature_iv"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    android:text="温度"
                    />
                <TextView
                    android:id="@+id/activity_device_temperature_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/temperature_tv"
                    android:text="18℃"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.8">
                <ImageView
                    android:id="@+id/humidity_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/humidity_icon"
                    />
                <TextView
                    android:id="@+id/humidity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/humidity_iv"
                    android:textColor="@color/text_gray"
                    android:text="湿度"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/activity_device_humidity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/humidity_tv"
                    android:text="70%"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <ImageView
                    android:id="@+id/pm25_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pm_icon"
                    />
                <TextView
                    android:id="@+id/pm25_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/text_gray"
                    android:layout_toRightOf="@+id/pm25_iv"
                    android:text="PM2.5"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/activity_device_pm25_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/pm25_tv"
                    android:text="123"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum="10"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fengji"
                        android:layout_marginTop="10dp"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/activity_device_wuran_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.8"
                    android:text="室内轻度污染"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="@color/activity_device_yellow_txt_color"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5.2">
                    <TextView
                        android:id="@+id/activity_device_big_temperature_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18°"
                        android:textSize="72sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/activity_device_green_txt_color"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/activity_device_big_temperature_tv"
                        android:layout_alignBottom="@+id/activity_device_big_temperature_tv"
                        android:layout_marginRight="10dp"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                >
                <RelativeLayout
                    android:id="@+id/power_rl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:id="@+id/power_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fengji_dianyuan"
                            android:layout_marginLeft="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电源"
                            android:textColor="@color/activity_device_center_txt_color"
                            android:textSize="12sp"
                            android:layout_below="@+id/power_iv"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            />

                        <RelativeLayout
                            android:id="@+id/fengji_power_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/power_iv"
                            >

                            <TextView
                                android:id="@+id/fengji_power_kai_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="开"
                                android:textSize="12sp"
                                android:textColor="@color/text_gray"
                                android:layout_centerVertical="true"
                                />
                            <RelativeLayout
                                android:id="@+id/power_bg_rl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/fengji_power_kai_tv"
                                >
                                <ImageView
                                    android:id="@+id/fengji_power_iv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/on_off_btn_bg"
                                    android:layout_centerInParent="true"
                                    />
                                <ImageView
                                    android:id="@+id/activity_device_fengji_power_kai_iv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/on_off_btn_cricle"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginLeft="-2dp"
                                    android:visibility="visible"
                                    />
                                <ImageView
                                    android:id="@+id/activity_device_fengji_power_guan_iv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/on_off_btn_cricle"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginRight="-2dp"
                                    android:layout_alignRight="@+id/fengji_power_iv"
                                    android:visibility="gone"
                                    />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/fengji_power_guan_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="关"
                                android:textColor="@color/text_gray"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/power_bg_rl"
                                android:textSize="12sp"
                                android:layout_marginLeft="5dp"
                                />
                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:layout_below="@+id/power_rl"
                    android:orientation="vertical"
                    android:weightSum="2"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/shidu_big_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/humidity_icon"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            />
                        <TextView
                            android:id="@+id/shidu_big_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="湿度"
                            android:textColor="@color/activity_device_center_txt_color"
                            android:layout_toRightOf="@+id/shidu_big_iv"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:id="@+id/activity_device_shidu_big_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80%"
                            android:textColor="@color/activity_device_green_txt_color"
                            android:layout_toRightOf="@+id/shidu_big_tv"
                            android:layout_alignBottom="@+id/shidu_big_tv"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textSize="22sp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/pm25_big_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pm_icon"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            />
                        <TextView
                            android:id="@+id/pm25_big_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PM2.5"
                            android:textColor="@color/activity_device_center_txt_color"
                            android:layout_toRightOf="@+id/pm25_big_iv"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:id="@+id/activity_device_pm25_big_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="115"
                            android:textColor="@color/activity_device_green_txt_color"
                            android:layout_toRightOf="@+id/pm25_big_tv"
                            android:layout_alignBottom="@+id/pm25_big_tv"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textSize="22sp"
                            />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/line"
            android:layout_width="4px"
            android:layout_height="50dp"
            android:background="@color/text_gray"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            ></RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="室内"
        android:textSize="14sp"
        android:textColor="@color/device_gray_qian"
        android:gravity="center_horizontal"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/activity_device_bg_line_color"></RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/activity_device_bgcolor"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:weightSum="2"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/message_center_item_bg"
                android:layout_marginRight="5dp"
                >
                <RelativeLayout
                    android:id="@+id/paiqi_huanqi_top_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    >
                    <ImageView
                        android:id="@+id/paiqi_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/exhaust_icon"
                        />
                    <TextView
                        android:id="@+id/paiqi_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/paiqi_iv"
                        android:text="排气"
                        android:layout_marginLeft="7dp"
                        android:textSize="12sp"
                        android:textColor="@color/activity_device_center_txt_color"
                        />

                    <ImageView
                        android:id="@+id/huanqi_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ventilation_icon"
                        android:layout_toRightOf="@+id/paiqi_tv"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/huanqi_iv"
                        android:text="换气"
                        android:layout_marginLeft="7dp"
                        android:textSize="12sp"
                        android:textColor="@color/activity_device_center_txt_color"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/paiqi_huanqi_bottom_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/paiqi_huanqi_top_rl"
                    >
                    <TextView
                        android:id="@+id/shoudong_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手动"
                        android:textColor="@color/text_gray"
                        android:layout_centerVertical="true"
                        android:textSize="12sp"
                        />
                    <RelativeLayout
                        android:id="@+id/paiqi_huanqi_bg_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/shoudong_tv"
                        >
                        <ImageView
                            android:id="@+id/paiqi_huanqi_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/on_off_btn_bg"
                            android:layout_centerInParent="true"
                            />
                        <ImageView
                            android:id="@+id/activity_device_paiqi_huanqi_shoudong_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/on_off_btn_cricle"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="-2dp"
                            />
                        <ImageView
                            android:id="@+id/activity_device_paiqi_huanqi_zidong_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/on_off_btn_cricle"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="-2dp"
                            android:layout_alignRight="@+id/paiqi_huanqi_iv"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/zidong_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自动"
                        android:textColor="@color/text_gray"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/paiqi_huanqi_bg_rl"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/message_center_item_bg"
                android:layout_marginLeft="5dp"
                >
                <RelativeLayout
                    android:id="@+id/fulizi_top_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    >

                    <ImageView
                        android:id="@+id/fulizi_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/exhaust_icon"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/fulizi_iv"
                        android:text="负离子"
                        android:layout_marginLeft="15dp"
                        android:textSize="12sp"
                        android:textColor="@color/activity_device_center_txt_color"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fulizi_bottom_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/fulizi_top_rl"
                    >

                    <TextView
                        android:id="@+id/kai_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开"
                        android:textColor="@color/text_gray"
                        android:layout_centerVertical="true"
                        android:textSize="12sp"
                        />

                    <RelativeLayout
                        android:id="@+id/fulizi_bg_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/kai_tv"
                        >
                        <ImageView
                            android:id="@+id/kaiguan_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/on_off_btn_bg"
                            android:layout_centerInParent="true"
                            />
                        <ImageView
                            android:id="@+id/activity_device_fulizi_kai_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/on_off_btn_cricle"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="-2dp"
                            />
                        <ImageView
                            android:id="@+id/activity_device_fulizi_guan_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/on_off_btn_cricle"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="-2dp"
                            android:layout_alignRight="@+id/kaiguan_iv"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/guan_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关"
                        android:textColor="@color/text_gray"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/fulizi_bg_rl"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        ></RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.8"
        android:weightSum="4"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/activity_exhaust_ventilation_rl"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/exhaust_ventilation_btn"
            >
            <RelativeLayout
                android:id="@+id/exhaust_ventilation_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/ventilation_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sendfengset"
                    />
                <ImageView
                    android:id="@+id/exhaust_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ventilation_iv"
                    android:src="@drawable/exhaust_set"
                    android:layout_marginLeft="20dp"
                    />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/exhaust_ventilation_rl"
                android:text="送风排风档位设置"
                android:textSize="10sp"
                android:textColor="@color/text_gray"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activity_param_set_rl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/param_btn"
            android:layout_toRightOf="@+id/activity_exhaust_ventilation_rl"
            >

            <ImageView
                android:id="@+id/params_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/param_set"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/params_iv"
                android:text="参数设置"
                android:textSize="10sp"
                android:textColor="@color/text_gray"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activity_timer_set_rl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/param_btn"
            android:layout_toRightOf="@+id/activity_param_set_rl"
            >
            <ImageView
                android:id="@+id/timer_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/timing_set"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/timer_iv"
                android:text="定时设置"
                android:textSize="10sp"
                android:textColor="@color/text_gray"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
