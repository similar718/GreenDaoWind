<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:weightSum="1.7"
        android:orientation="vertical"
        android:background="@drawable/title_bar_bg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"></RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">
            <ImageView
                android:id="@+id/fragment_device_bind_weather_iv"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@drawable/user_head"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/fragment_device_bind_weather_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18°"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/fragment_device_bind_weather_iv"
                android:layout_marginTop="5dp"
                android:textSize="38sp"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:id="@+id/fragment_device_bind_weather_txt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:text="多云 | 微风"
                android:textSize="16sp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/fragment_device_bind_shidu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/fragment_device_bind_weather_txt_tv"
                android:layout_marginBottom="8dp"
                android:text="湿度70%"
                android:textSize="16sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/fragment_device_bind_pm25_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/fragment_device_bind_shidu_tv"
                android:layout_marginBottom="8dp"
                android:text="PM 2.5"
                android:textSize="16sp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/fragment_device_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广州"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/location_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location"
                android:layout_toLeftOf="@+id/fragment_device_city_tv"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/device_bg_ellipse_big" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/device_bg_ellipse_middle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/device_bg_ellipse_small" />

        <RelativeLayout
            android:id="@+id/search_rl"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >
            <RelativeLayout
                android:id="@+id/fragmet_device_bind_add_device_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="绑定设备"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:textSize="13sp"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/search_rl">

            <ListView
                android:id="@+id/fragment_device_bind_device_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"></ListView>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>

