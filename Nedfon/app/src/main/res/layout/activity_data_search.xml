<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="1.2"
        android:orientation="vertical"
        android:background="@drawable/title_bar_bg"
        >
        <include layout="@layout/top_layout"></include>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="2"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/activity_data_search_tableft_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/activity_data_search_tableft_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据记录"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:textColor="@color/device_gray_shen"
                />
            <ImageView
                android:id="@+id/activity_data_search_tableft_iv"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_below="@+id/activity_data_search_tableft_tv"
                android:background="@color/green_txt_color"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_data_search_tabright_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/activity_data_search_tabright_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运行状态记录"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:textColor="@color/device_gray_qian"
                />
            <ImageView
                android:id="@+id/activity_data_search_tabright_iv"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_below="@+id/activity_data_search_tabright_tv"
                android:background="@color/device_gray_qian"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="@drawable/set_long_bg">
        <LinearLayout
            android:id="@+id/activity_data_search_include_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:visibility="gone"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >
                <ImageView
                    android:id="@+id/activity_data_search_temperature_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/temperature_icon"
                    />
                <TextView
                    android:id="@+id/activity_data_search_temperature_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/activity_data_search_temperature_iv"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    android:text="温度"
                    />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:id="@+id/activity_data_search_humidity_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/humidity_icon"
                    />
                <TextView
                    android:id="@+id/activity_data_search_humidity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/activity_data_search_humidity_iv"
                    android:textColor="@color/text_gray"
                    android:text="湿度"
                    android:textSize="12sp"
                    />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:id="@+id/activity_data_search_pm25_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pm_icon"
                    />
                <TextView
                    android:id="@+id/activity_data_search_pm25_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/text_gray"
                    android:layout_toRightOf="@+id/activity_data_search_pm25_iv"
                    android:text="PM2.5"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:id="@+id/activity_data_search_time_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/timing_gray_icon"
                    />
                <TextView
                    android:id="@+id/activity_data_search_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/activity_data_search_time_iv"
                    android:textColor="@color/text_gray"
                    android:text="时间"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
        </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_data_search_status_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >
                    <ImageView
                        android:id="@+id/activity_data_search_time_right_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/timing_gray_icon"
                        />
                    <TextView
                        android:id="@+id/activity_data_search_time_right_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/activity_data_search_time_right_iv"
                        android:textColor="@color/text_gray"
                        android:text="时间"
                        android:textSize="12sp"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >
                    <ImageView
                        android:id="@+id/activity_data_search_status_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/status_icon"
                        />
                    <TextView
                        android:id="@+id/activity_data_search_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/activity_data_search_status_iv"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp"
                        android:text="状态"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">
        <ListView
            android:id="@+id/activity_data_search_include_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/green_txt_color"
            android:dividerHeight="1px"
            ></ListView>

        <ListView
            android:id="@+id/activity_data_search_status_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/green_txt_color"
            android:dividerHeight="1px"
            android:visibility="gone"
            ></ListView>
        <TextView
            android:id="@+id/empty_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="数据为空!"
            android:textColor="@color/green_txt_color"
            android:textSize="20sp"
            android:gravity="center"
            android:visibility="gone"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3">
        <Button
            android:id="@+id/activity_data_search_7_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/green_txt_color"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:text="最近7日"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/activity_data_search_1_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/device_gray_qian"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:text="最近1月"
            android:textSize="12sp"
            />
        <Button
            android:id="@+id/activity_data_search_3_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/device_gray_qian"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:text="最近3月"
            android:textSize="12sp"
            />
    </LinearLayout>
</LinearLayout>
