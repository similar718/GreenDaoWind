<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="1.2"
        android:orientation="vertical"
        android:background="@drawable/title_bar_bg"
        >
        <include layout="@layout/top_layout"></include>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wifi_icon"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/activity_device_internet_wifi_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gif2013"
            android:textColor="@color/device_gray_shen"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/search_rl"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/internet_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="WIFI密码"
                android:textSize="14sp"
                android:textColor="@color/device_bind_set_internet_text" />

            <RelativeLayout
                android:layout_width="162dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/internet_tv"
                android:background="@drawable/search_bg">

                <EditText
                    android:id="@+id/activity_device_internet_wifi_pwd_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:background="@null" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/activity_login_sent_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:id="@+id/activity_device_internet_wifi_connect_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn"
            android:layout_centerInParent="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连&#160;接"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textSize="13sp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/activity_device_internet_wifi_connect_prompt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="连接成功！"
            android:textColor="@color/green_txt_color"
            android:textSize="11sp"
            android:layout_above="@+id/activity_device_internet_wifi_connect_rl"
            android:layout_marginBottom="15dp"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>
